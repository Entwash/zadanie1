<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="60.13">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:id="@+id/day_textView"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:id="@+id/app_textView"
                android:layout_below="@+id/day_textView"
                android:layout_alignLeft="@+id/day_textView"
                android:layout_alignStart="@+id/day_textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:id="@+id/plan_textView"
                android:layout_below="@+id/app_textView"
                android:layout_alignLeft="@+id/app_textView"
                android:layout_alignStart="@+id/app_textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:id="@+id/topic_textView"
                android:layout_below="@+id/plan_textView"
                android:layout_alignLeft="@+id/plan_textView"
                android:layout_alignStart="@+id/plan_textView" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>